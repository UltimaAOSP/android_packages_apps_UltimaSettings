<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ultima="http://schemas.android.com/apk/res-auto/com.ultima.settings"
     android:key="settings_root">
    <PreferenceScreen 
        android:title="@string/battery_icon_category" 
        android:key="settings_battery"
        android:icon="?attr/batteryIcon"
        android:widgetLayout="@layout/round_more_icon">
        <!-- Battery percent on/off -->
        <SwitchPreference 
            android:title="@string/battery_percent" 
            android:key="status_bar_show_battery_percent;0" 
            android:summary="@string/battery_percent_summary"/>
        <!-- Battery Text Colour -->
		<com.ultima.settings.colorpicker.ColorPickerPreference 
		    android:title="@string/battery_text_colour" 
		    android:key="status_bar_battery_percent_color" 
		    android:summary="@string/battery_text_colour_summary" 
		    defaultValue="0xff000000"
		    android:dependency="status_bar_show_battery_percent;0" />
		<com.ultima.settings.colorpicker.ColorPickerPreference 
		    android:title="@string/battery_text_percent_colour_40" 
		    android:key="status_bar_battery_percent_color_forty" 
		    android:summary="@string/battery_text_percent_colour_40_summary" 
		    defaultValue="0xffffffff"
		    android:dependency="status_bar_show_battery_percent;0" />
		<ListPreference 
		    android:title="@string/battery_text_font"
		    android:key="status_bar_battery_text_font" 
		    android:summary="@string/list_summary"
		    android:entries="@array/battery_font_entries"
		    android:entryValues="@array/battery_font_values"
		    android:defaultValue="0"
		    android:dependency="status_bar_show_battery_percent;0" />
		
       <PreferenceCategory
           android:title="@string/battery_colour_category"
           android:key="settings_cat_battery_colour">
	        <!-- Battery Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_icon_colour" 
			    android:key="status_bar_battery_norm_color" 
			    android:summary="@string/battery_icon_colour_summary"
			    defaultValue="0xffffffff"
    			alphaSlider="true" />
			<!-- Battery Background Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_back_colour" 
			    android:key="status_bar_battery_back_color" 
			    android:summary="@string/battery_back_colour_summary"
			    defaultValue="0x66FFFFFF"
			    alphaSlider="true" />
			<!-- Battery Charge Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_charge_colour" 
			    android:key="status_bar_battery_charge_color" 
			    android:summary="@string/battery_charge_colour_summary"
			    defaultValue="0xffffffff"
			    alphaSlider="true" />
			<!-- Battery Bolt Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_bolt_colour" 
			    android:key="status_bar_battery_bolt_color" 
			    android:summary="@string/battery_bolt_colour_summary" 
			    defaultValue="0xb2000000"
			    alphaSlider="true" />	           
       </PreferenceCategory> 
       <PreferenceCategory
           android:title="@string/battery_levels_category"
           android:key="settings_cat_battery_levels">
		    <!-- Battery Low Level -->
		    <Preference 
		        android:title="@string/battery_level_low" 
		        android:key="battery_level_low" 
		        android:summary="@string/battery_level_low_summary" />    
			<!-- Battery Low Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_low_colour" 
			    android:key="status_bar_battery_low_color" 
			    android:summary="@string/battery_low_colour_summary" 
			   defaultValue="0xffffffff"
			    alphaSlider="true" />
			<!-- Battery Low Level -->
		    <Preference 
		        android:title="@string/battery_level_mid" 
		        android:key="battery_level_mid" 
		        android:summary="@string/battery_level_mid_summary" /> 
			<!-- Battery Mid Color -->
			<com.ultima.settings.colorpicker.ColorPickerPreference 
			    android:title="@string/battery_mid_colour" 
			    android:key="status_bar_battery_mid_color" 
			    android:summary="@string/battery_mid_colour_summary" 
			    defaultValue="0xffffffff"
			    alphaSlider="true" />
		</PreferenceCategory>
		
       <PreferenceCategory 
           android:title="@string/battery_warning_title"
           android:key="battery_warning_cat">
           	<ListPreference
           	    android:title="@string/battery_warning_title"
		    	android:key="status_bar_battery_warning" 
		    	android:summary="@string/list_summary"
		    	android:entries="@array/battery_warning_entries"
		    	android:entryValues="@array/battery_warning_values"
		    	android:defaultValue="0" />
       </PreferenceCategory>

		<Preference android:title="@string/battery_reset_defaults" 
		    android:key="battery_reset_defaults" 
		    android:summary="@string/battery_reset_defaults_summary" />

    </PreferenceScreen>
    <Preference 
        android:icon="?attr/bootaniIcon" 
        android:title="@string/boot_animation_title" 
        android:key="activity;com.ultima.settings;com.ultima.settings.bootanimation.BootAnimationActivity" 
        android:widgetLayout="@layout/round_more_icon" />
    <PreferenceScreen 
        android:title="@string/clock_category"
        android:key="settings_clock"
        android:icon="?attr/clockIcon"
        android:widgetLayout="@layout/round_more_icon">
        	<com.ultima.settings.colorpicker.ColorPickerPreference
        	    android:title="@string/clock_colour_title" 
			    android:key="status_bar_clock_colour" 
			    android:summary="@string/clock_color_summary" 
			    defaultValue="0xffffffff"
			    alphaSlider="true" />
        	<ListPreference 
        	    android:title="@string/clock_style_title"
		    	android:key="status_bar_clock_style" 
		    	android:summary="@string/list_summary"
		    	android:entries="@array/clock_style_entries"
		    	android:entryValues="@array/clock_style_values"
		    	android:defaultValue="2" />
        	<ListPreference 
        	    android:title="@string/clock_ampm_style_title"
		    	android:key="status_bar_clock_ampm_style" 
		    	android:summary="@string/list_summary"
		    	android:entries="@array/clock_ampm_style_entries"
		    	android:entryValues="@array/clock_ampm_style_values"
		    	android:defaultValue="2" />
        	<ListPreference 
        	    android:title="@string/clock_dow_style_title"
		    	android:key="status_bar_clock_dow_style" 
		    	android:summary="@string/list_summary"
		    	android:entries="@array/clock_dow_style_entries"
		    	android:entryValues="@array/clock_dow_style_values"
		    	android:defaultValue="2" />
        	<CheckBoxPreference 
        	   	android:title="@string/clock_alarm_icon_title"
        	    android:key="system_pref_alarm_icon;1"
        	    android:summary="@string/clock_alarm_icon_summary" />
    </PreferenceScreen>
    <Preference 
        android:icon="?attr/hostnameIcon" 
        android:title="@string/hostname_title" 
        android:key="activity;com.ultima.settings;com.ultima.settings.hostname.HostnameActivity" 
        android:widgetLayout="@layout/round_more_icon" />
    <PreferenceScreen 
        android:title="@string/launcher_screen_title"
        android:icon="?attr/launcherIcon"
        android:key="settings_launcher_screen"
        android:widgetLayout="@layout/round_more_icon" >
        	
        <com.ultima.settings.NumberPickerPreference
            android:key="pref_key_workspaceRows"
            android:title="@string/launcher_title_workspace_rows"
            ultima:min="1"
            ultima:max="10"
            ultima:def="4" />
        <com.ultima.settings.NumberPickerPreference
            android:key="pref_key_workspaceCols"
            android:title="@string/launcher_title_workspace_cols"
            ultima:min="1"
            ultima:max="10"
            ultima:def="4" />

        <com.ultima.settings.NumberPickerPreference
            android:key="pref_key_workspaceDefaultPage"
            android:title="@string/launcher_title_default_workspace"
            ultima:def="0"
            ultima:min="0"
            ultima:max="10" />
        
        <CheckBoxPreference
            android:key="pref_key_showSearchBar;1"
            android:title="@string/launcher_title_show_search_bar"
            android:summaryOn="@string/launcher_title_show_search_bar_on"
            android:summaryOff="@string/launcher_title_show_search_bar_off"
            android:defaultValue="true" />
        
         <CheckBoxPreference
            android:key="pref_key_enableRotation;0"
            android:title="@string/launcher_title_rotation"
            android:summaryOn="@string/launcher_title_rotation_on"
            android:summaryOff="@string/launcher_title_rotation_off"
            android:defaultValue="true" />
         
            <Preference android:title="@string/restart_launcher" 
		    android:key="tool#restartlauncher" 
		    android:summary="@string/restart_launcher_summary" />      	
    </PreferenceScreen>
    <PreferenceScreen 
        android:title="@string/led_screen_title"
        android:key="screen_led_setting" 
        android:icon="?attr/ledIcon"
        android:widgetLayout="@layout/round_more_icon">
        	<PreferenceCategory
	           android:title="@string/battery_led_cat"
	           android:key="battery_led_cat">
	           	<com.ultima.settings.colorpicker.ColorPickerPreference
	           	    android:title="@string/battery_led_low_colour" 
				    android:key="system_pref_batt_ledcolor_low" 
				    android:summary="@string/battery_led_low_colour_summary" 
				    defaultValue="0xffff0000" />
	           	<com.ultima.settings.colorpicker.ColorPickerPreference
	           	    android:title="@string/battery_led_med_colour" 
				    android:key="system_pref_batt_ledcolor_med" 
				    android:summary="@string/battery_led_med_colour_summary" 
				    defaultValue="0xffffff00" />
	           	<com.ultima.settings.colorpicker.ColorPickerPreference
	           	    android:title="@string/battery_led_full_colour" 
				    android:key="system_pref_batt_ledcolor_full" 
				    android:summary="@string/battery_led_full_colour_summary" 
				    defaultValue="0xff00ff00" />
	       </PreferenceCategory>
	       <Preference
	           android:title="@string/information"
	           android:icon="?attr/alertIcon"
	           android:summary="@string/led_information"
	           style="?android:preferenceInformationStyle"
	           android:key="led_information"
	           android:selectable="false" />
    </PreferenceScreen>
    <PreferenceScreen 
        android:title="@string/mod_lockscreen_screen"
        android:key="mod_lockscreen_screen"
        android:icon="?attr/lockscreenIcon"
        android:widgetLayout="@layout/round_more_icon">
	       
        	<CheckBoxPreference 
        	    android:title="@string/mod_lockscreen_menu_title"
        	    android:key="system_pref_menu_lockscreen;1"
        	    android:summary="@string/mod_lockscreen_menu_summary"
        	    android:defaultValue="1" />
        	
        	<CheckBoxPreference 
        	    android:title="@string/lockscreen_torch_toggle"
        	    android:key="system_pref_torch_home_button;0"
        	    android:summary="@string/lockscreen_torch_toggle_summary"
        	    android:defaultValue="0" />
        	
        	<ListPreference
                 android:key="system_pref_torch_toggle_timeout"
                 android:title="@string/lockscreen_torch_toggle_timeout"
                 android:entries="@array/long_press_timeout_entries"
                 android:entryValues="@array/long_press_timeout_values"
                 android:persistent="false"
                 android:dependency="system_pref_torch_home_button;0"
                 android:summary="@string/list_summary" />
        	
        	<CheckBoxPreference 
        	    android:title="@string/mod_volume_media_controls"
        	    android:key="system_pref_volume_to_skip;0"
        	    android:summary="@string/mod_volume_media_controls_summary" /> 
        	    
    </PreferenceScreen>  
    <PreferenceScreen 
        android:title="@string/mod_screen_title" 
        android:key="settings_mod_screen"
        android:icon="?attr/modsIcon"
        android:widgetLayout="@layout/round_more_icon">
        	
        	<PreferenceCategory 
        	    android:title="@string/mod_crt_category" 
        	    android:key="crt_category">
	           	
				<!-- Currently FC's when you rotate the display
				<ListPreference 
				    android:title="@string/mod_crt_on_title"
				    android:key="system_crt_on"
				    android:summary="@string/list_summary"
				    android:entries="@array/crt_on_animation_entries"
				    android:entryValues="@array/crt_on_animation_values"
				    android:defaultValue="2" /> -->
				    
				<ListPreference 
				    android:title="@string/mod_crt_off_title"
				    android:key="system_crt_off"
				    android:summary="@string/list_summary"
				    android:entries="@array/crt_off_animation_entries"
				    android:entryValues="@array/crt_off_animation_values"
				    android:defaultValue="1" />
				
				<Preference
				    android:title="@string/mod_advanced_display_title"
				    android:summary="@string/mod_advanced_display_summary"
				    android:key="activity;com.cyanogenmod.settings.device;com.cyanogenmod.settings.device.DisplaySettings" />     
				 
				 <CheckBoxPreference 
				     android:title="@string/mod_touch_key_backlight"
				     android:key="system_pref_button_brightness;1"
				     android:summary="@string/mod_touch_key_backlight_summary"/>
				 
				 <ListPreference 
				    android:title="@string/mod_touch_key_backlight_timeout"
				    android:key="system_pref_button_timeout"
				    android:summary="@string/list_summary"
				    android:entries="@array/touchkey_timeout_entries"
				    android:entryValues="@array/touchkey_timeout_values"
				    android:dependency="system_pref_button_brightness;1"
				    android:defaultValue="1" />   	    
        	</PreferenceCategory>
        	<PreferenceCategory 
        	    android:title="@string/mod_power_menu_category"
        	    android:key="mod_power_category">
				
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_power_menu_title"
        	    	    android:summary="@string/mod_power_menu_summary"
        	    	    android:key="system_pref_power_menu;0" />
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_screenshot_title"
        	    	    android:summary="@string/mod_screenshot_summary"
        	    	    android:key="system_pref_power_menu_screenshot;0" />
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_airplane_title"
        	    	    android:summary="@string/mod_airplane_summary"
        	    	    android:key="system_pref_power_menu_airplane;0" />
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_silentmode_title"
        	    	    android:summary="@string/mod_silentmode_summary"
        	    	    android:key="system_pref_power_menu_silentmode;0" />
        	    	
        	</PreferenceCategory>
        	<PreferenceCategory 
        	    android:title="@string/mod_navbar_category"
        	    android:key="mod_navbar_category">
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_navbar_title"
        	    	    android:summary="@string/mod_navbar_summary"
        	    	    android:key="system_pref_show_navbar;0" />
        	    	
        	    	
        	</PreferenceCategory>
        	<PreferenceCategory 
        	    android:title="@string/mod_ime_switcher_title"
        	    android:key="mod_ime_category">
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_ime_switcher_title"
        	    	    android:key="system_pref_ime_switcher_notif;1"
        	    	    android:summary="@string/mod_ime_switcher_summary"
        	    	    android:defaultValue="1" />
        	    	
        	</PreferenceCategory>
        	<PreferenceCategory 
        	    android:title="@string/mod_sounds_category"
        	    android:key="mod_sounds_category">
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_screen_chord_title"
        	    	    android:key="system_pref_screenshot_chord;1"
        	    	    android:summary="@string/mod_screen_chord_summary"
        	    	    android:defaultValue="1" />
        	    	
        	    	<CheckBoxPreference 
        	        android:title="@string/mod_volume_headphones_nag_title"
        	        android:key="system_pref_safe_volume_nag;1"
        	        android:summary="@string/mod_volume_headphones_nag_summary"/>
        	    	
        	</PreferenceCategory>
        	<PreferenceCategory 
        	    android:title="@string/mod_rotation_category"
        	    android:key="mod_rotation_category">
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_rotation_title"
        	    	    android:key="system_pref_all_rotation;0"
        	    	    android:summary="@string/mod_rotation_summary"
        	    	    android:defaultValue="0" />
        	    	
        	</PreferenceCategory> 
        	<PreferenceCategory 
        	    android:title="@string/mod_long_back_title"
        	    android:key="mod_long_back">
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_long_back_title"
        	    	    android:summary="@string/mod_long_back_summary"
        	    	    android:key="system_pref_long_back_kill;0" />
        	    	
        	    	<ListPreference 
					    android:title="@string/mod_long_back_timeout"
					    android:key="system_pref_long_back_kill_timeout"
					    android:summary="@string/list_summary"
					    android:entries="@array/long_press_timeout_entries"
					    android:entryValues="@array/long_press_timeout_values"
					    android:defaultValue="1"
					    android:dependency="system_pref_long_back_kill;0" />
        	</PreferenceCategory> 
        	<PreferenceCategory
        	    android:title="@string/mod_recents_screen"
        	    android:key="mod_recents_screen">
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_recents_clear_all"
        	    	    android:summary="@string/mod_recents_clear_all_summary"
        	    	    android:key="system_pref_clear_all;0" />
        	    	
        	    	<ListPreference 
        	    	    android:title="@string/mod_clear_all_position"
        	    	    android:key="system_pref_clear_all_position"
        	    	    android:summary="@string/list_summary"
        	    	    android:entries="@array/clear_all_position_entries"
					    android:entryValues="@array/clear_all_position_values"
					    android:defaultValue="0"
					    android:dependency="system_pref_clear_all;0"/>
        	    	
        	    	<CheckBoxPreference 
        	    	    android:title="@string/mod_recents_rambar"
        	    	    android:summary="@string/mod_recents_rambar_summary"
        	    	    android:key="system_pref_rambar;0" />
        	    	
        	    	<!-- <ListPreference 
        	    	    android:title="@string/mod_rambar_position"
        	    	    android:key="system_pref_rambar_position"
        	    	    android:summary="@string/list_summary"
        	    	    android:entries="@array/clear_all_position_entries"
					    android:entryValues="@array/clear_all_position_values"
					    android:defaultValue="1"
					    android:dependency="system_pref_rambar;0"/> -->
        	    	
        	    	<com.ultima.settings.colorpicker.ColorPickerPreference
		        	    android:title="@string/mod_recents_rambar_color_left"
		        	    android:key="system_pref_rambar_color_left"
		        	    android:summary="@string/mod_recents_rambar_color_left_summary"
		        	    defaultValue="0xffffffff"
					    alphaSlider="true" />
        	    	
        	    	<com.ultima.settings.colorpicker.ColorPickerPreference
		        	    android:title="@string/mod_recents_rambar_color_right"
		        	    android:key="system_pref_rambar_color_right"
		        	    android:summary="@string/mod_recents_rambar_color_right_summary"
		        	    defaultValue="0xff888888"
					    alphaSlider="true" />
        	</PreferenceCategory>
    </PreferenceScreen>
    <!-- Network traffic meter -->
     <PreferenceScreen
             android:key="category_network_traffic"
             android:title="@string/network_traffic_title"
             android:icon="?attr/networkMeterIcon"
        	 android:widgetLayout="@layout/round_more_icon">

         <ListPreference
                 android:key="system_pref_network_traffic_meter"
                 android:title="@string/show_network_traffic_state"
                 android:entries="@array/show_network_traffic_state_entries"
                 android:entryValues="@array/show_network_traffic_state_values"
                 android:persistent="false"
                 android:summary="@string/list_summary" />
 
         <ListPreference
                 android:key="system_pref_network_traffic_unit"
                 android:title="@string/show_network_traffic_unit"
                 android:entries="@array/show_network_traffic_unit_entries"
                 android:entryValues="@array/show_network_traffic_unit_values"
                 android:persistent="false"
                 android:summary="@string/list_summary" />
 
         <ListPreference
                 android:key="system_pref_network_traffic_interval"
                 android:title="@string/show_network_traffic_frequency"
                 android:entries="@array/show_network_traffic_frequency_entries"
                 android:entryValues="@array/show_network_traffic_frequency_values"
                 android:persistent="false"
                 android:summary="@string/list_summary" />
         
         <CheckBoxPreference 
             android:key="system_pref_network_traffic_hide;0"
             android:title="@string/network_traffic_hide_inactivity" 
             android:summary="@string/network_traffic_hide_inactivity_summary"/>
         
         <CheckBoxPreference 
             android:key="system_pref_network_traffic_text;0"
             android:title="@string/network_traffic_text" 
             android:summary="@string/network_traffic_text_summary"/>
         
         <CheckBoxPreference 
             android:key="system_pref_network_traffic_icon;1"
             android:title="@string/network_traffic_icon" 
             android:summary="@string/network_traffic_icon_summary"/>
         
         <com.ultima.settings.colorpicker.ColorPickerPreference
        	    android:title="@string/network_traffic_color"
        	    android:key="system_pref_network_traffic_color"
        	    android:summary="@string/network_traffic_color_summary"
        	    defaultValue="0xffffffff"
			    alphaSlider="true" />
           
      </PreferenceScreen>
    <PreferenceScreen
        android:title="@string/signal_icons_title"
        android:key="screen_sysyu"
        android:icon="?attr/wifiIcon"
        android:widgetLayout="@layout/round_more_icon">
        	<com.ultima.settings.colorpicker.ColorPickerPreference
        	    android:title="@string/sysui_statusbar_icon_colors_title"
        	    android:key="system_pref_statusbar_icon_colors"
        	    android:summary="@string/sysui_statusbar_icon_colors_summary"
        	    defaultValue="0xffffffff"
			    alphaSlider="true" />
    </PreferenceScreen>
</PreferenceScreen>
