<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/backgroundSelector"
    	android:onClick="openUpdates"
    	android:padding="15dp">

        <ImageView
            android:id="@+id/updater_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/downloadIcon"
            android:contentDescription="@string/updater_check_for_updates_title" />
               
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
    	
	        <TextView
	            android:id="@+id/updater_check_for_updates_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_check_for_updates_title"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <TextView
	            android:id="@+id/updater_check_for_updates_summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_check_for_updates_information"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="?attr/separator"
        android:padding="15dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/backgroundSelector"
    	android:onClick="openDownloads"
    	android:padding="15dp">

        <ImageView
            android:id="@+id/updater_downloads_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/downloadExtraIcon"
            android:contentDescription="@string/updater_download_extras_title" />
             
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
    	
	        <TextView
	            android:id="@+id/updater_download_extras_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_download_extras_title"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <TextView
	            android:id="@+id/updater_download_extra_summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_download_extras_information"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="?attr/separator"
        android:padding="15dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/backgroundSelector"
    	android:onClick="openGapps"
    	android:padding="15dp">

        <ImageView
            android:id="@+id/updater_gapps_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/downloadGappsIcon"
            android:contentDescription="@string/updater_gapps_title" />
             
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
    	
	        <TextView
	            android:id="@+id/updater_gapps_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_gapps_title"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <TextView
	            android:id="@+id/updater_gapps_summary"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/updater_gapps_information"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="?attr/separator"
        android:padding="15dp" />
    
    <include
        layout="@layout/updater_rom_info" />
    
    <View
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:background="?attr/separator"
        android:padding="15dp" />

</LinearLayout>