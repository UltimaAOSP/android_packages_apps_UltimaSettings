<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.52"
        android:orientation="vertical" >

        <TextView
            android:id="@id/file_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animation"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/holo_blue_light" />

        <TextView
            android:id="@id/file_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/holo_red_light"
            android:text="@string/none" />

        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/boot_ani_status"
            android:textColor="@color/holo_blue_light" />

        <TextView
            android:id="@+id/StatusTextAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_red_light"
            android:text="@string/none" />
      

    </LinearLayout>
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
        <Button
            android:id="@id/choose_file"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_file" />

        <Button
            android:id="@+id/clear_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_file" />
	    
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

        

        <Button
            android:id="@id/set_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_animation" />

        <Button
            android:id="@id/reset_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_boot_animation" />

        <Button
            android:id="@+id/enable_disable_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_disable_boot" />
    </LinearLayout>

</LinearLayout>